<%= simple_form_for(@coach) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :phone, required: false %>
    <%= f.input :days, collection: [ "Friday and Saturday", "Friday only", "Saturday only"],label: "I can commit to...", required: true, as: :radio_buttons %>
    <%= f.input :operating_system, collection: [ "Mac", "Linux", "Windows"], required: true, as: :radio_buttons %>
    <%= f.input :twitter, placeholder: "https://twitter.com/your-user-name", required: false %>
    <%= f.input :github, placeholder: "https://github.com/your-user-name", required: false %>
    <%= f.input :job, label: "Job Title, Company" %>
    <%= f.input :notes, label: "Anything you want to add or ask. :) List your past students if you can remember them." %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
