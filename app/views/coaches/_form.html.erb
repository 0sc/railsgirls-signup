<%= simple_form_for(@coach) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :twitter, placeholder: "https://twitter.com/your-user-name", required: false %>
    <%= f.input :github, placeholder: "https://github.com/your-user-name", required: false %>
    <%= f.input :job, label: "Job / Position" %>
    <%= f.input :attended_as_student, as: :radio_buttons %>
    <%= f.input :coached_april_13, as: :radio_buttons %>
    <%= f.input :coached_march_14, as: :radio_buttons %>
    <%= f.input :coached_april_15, as: :radio_buttons %>
    <%= f.input :coached_august_15, as: :radio_buttons %>
    <%= f.input :coached_march_16, as: :radio_buttons %>
    <%= f.input :notes, label: "Anything you want to add or ask. :)" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
