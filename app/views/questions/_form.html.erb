<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :boolean_question %>
    <%= f.input :string_question %>
    <%= f.input :text_question %>
    <%= f.input :integer_question %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
